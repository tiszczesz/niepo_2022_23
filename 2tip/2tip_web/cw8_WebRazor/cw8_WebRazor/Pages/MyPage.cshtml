@page
@model cw8_WebRazor.Pages.MyPageModel
@{
}
<h1>Informacje o Kontaktach</h1>

<div>
    <table class="table table-bordered">
        <tr>
            <th>Lp</th>
            <th>Nazwa</th>
            <th>Telefon</th>
            <th>Email</th>
            <th>Operacje na kontaktach</th>
        </tr>
        @{
            int lp = 0;
        }
        @foreach (var c in Model.Contacts) {
            lp++;
            <tr>
                <td>@lp</td>
                <td>@c.Name</td>
                <td>@c.Phone</td>
                <td>@c.Email</td>
                <td>
                    <a class="btn btn-danger" asp-page="Delete" 
                       asp-route-id="@c.Id">Usuń</a> 
                    <a class="btn btn-primary" asp-page="Update" 
                       asp-route-id="@c.Id">Edytuj</a>
                </td>
            </tr>
        }
    </table>
</div>