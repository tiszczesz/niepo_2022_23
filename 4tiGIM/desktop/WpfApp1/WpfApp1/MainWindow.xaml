<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Główne okno" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="label" Content="Podaj nazwisko:" HorizontalAlignment="Center" Margin="0,22,0,0" VerticalAlignment="Top" Width="178" Height="40"/>
        <TextBox x:Name="textBox" Grid.Column="1" Margin="0,22,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Height="40"/>
        <Button Click="Button_OnClick" x:Name="button" Grid.Column="2" Content="Zatwierdź" Margin="22,22,22,0" VerticalAlignment="Top" Height="42"/>
        <Label x:Name="Result" Grid.Column="2" Content="Label" Grid.Row="1" Height="NaN" Width="NaN"/>

    </Grid>
</Window>
