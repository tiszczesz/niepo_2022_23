@model User;
@{
    ViewData["Title"] = "Dodaj użytkownika";
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8" />
    <title>Ogłoszenia drobne</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
<header class="baner">
    <h2>
        Ogłoszenia drobne
    </h2>
</header>
<main class="container">
    <section banner>
        <h2>Rejestracja użytkownika</h2>
    </section>
    <div class="glowny">
        <section id="lewy">
            <h3>
                Wpisz swoje dane
            </h3>
            <form method="post" asp-action="AddNew">
                <label asp-for="imie"></label><br/>
                <input asp-for="imie"/><br/>
                <label asp-for="nazwisko"></label><br/>
                <input asp-for="nazwisko"/><br/>
                <label asp-for="telefon"></label><br/>
                <input asp-for="telefon"/><br/>
                <label asp-for="email"></label><br/>
                <input asp-for="email"/><br/>
                    <div>
                        <input type="reset" value="CZYŚĆ" />
                    <input type="submit" value="WYŚLIJ"/>
                    
                </div>
            </form>

        </section>
       
        <section id="prawy">
            <h2>
                Nasze kategorie
            </h2>
          
            <img src="~/media/ksiazki.jpg" alt="uwolnij swoją książkę"/>
            <table>
                <tr>
                    <td>Ile?</td>
                    <td>Koszt</td>
                    <td>Promocja</td>
                </tr>
                <tr>
                    <td>1 - 40</td>
                    <td>1.20 PLN</td>
                    <td rowspan="2">Subskrybuj newslatter upust 0.30 PLN na ogłoszenie</td>
                </tr>
                <tr>
                    <td>41 i więcej</td>
                    <td>0.70 PLN</td>

                </tr>
            </table>
        </section>
    </div>
    <footer>Portal ogłoszenia drobne opracował: XXXXXXXXX</footer>
</main>
</body>
</html>



