@{
    ViewData["Title"] = "Dodaj użytkownika";
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8" />
    <title>Ogłoszenia drobne</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header class="baner">
        <h2>
            Ogłoszenia drobne
        </h2>
    </header>
<main class="container">
    <section banner>
        <h2>Rejestracja użytkownika</h2>
    </section>
    <div class="glowny">
        <section id="lewy">
            <h3>
               Wpisz swoje dane
            </h3>
            <form method="post" asp-action="Index">
                <label asp-for=""></label>
            </form>

        </section>
        <section id="srodkowy">
            <h3>Lista ogłoszeń</h3>
            <ul>
                @foreach (var ogloszenia in Model.OgloszeniaByCat) {
                    <li>@ogloszenia.kategoria @ogloszenia.tytul @ogloszenia.tresc @ogloszenia.Kategorie.nazwa</li>
                }
            </ul>
        </section>
        <section id="prawy">
            <h2>
                Nasze kategorie
            </h2>
            <ul class="lista">
                <li><a asp-action="Index" asp-route-id="-1">Wszystkie</a></li>
                @foreach (var kategory in Model.Kategories) {
                    <li><a asp-action="Index" asp-route-id="@kategory.id">@kategory.nazwa</a></li>
                }
            </ul>
            <img src="~/media/ksiazki.jpg" alt="uwolnij swoją książkę"/>
            <table>
                <tr>
                    <td>Ile?</td>
                    <td>Koszt</td>
                    <td>Promocja</td>
                </tr>
                <tr>
                    <td>1 - 40</td>
                    <td>1.20 PLN</td>
                    <td rowspan="2">Subskrybuj newslatter upust 0.30 PLN na ogłoszenie</td>
                </tr>
                <tr>
                    <td>41 i więcej</td>
                    <td>0.70 PLN</td>

                </tr>
            </table>
        </section>
    </div>
    <footer>Portal ogłoszenia drobne opracował: XXXXXXXXX</footer>
</main>
</body>
</html>


