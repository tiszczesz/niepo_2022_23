@model OgloszeniaMVCMysql.ViewModels.IndexViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8"/>
    <title>Ogłoszenia drobne</title>
    <link rel="stylesheet" href="css/site.css"/>
</head>
<body>
<header class="baner">
    <h2>
            Ogłoszenia drobne
    </h2>
</header>
<main class="container">
    <div class="glowny">
        <section id="lewy">
            <h2>
                Ogłoszeniodawcy
            </h2>
            @foreach (var u in Model.Uzytkownicies) {
                <h3>@u.id @u.imie @u.nazwisko </h3>
                <p>@u.email</p>
                <p>Ogłoszenie: @u.Ogloszenias[0].tytul</p>

            }
           
        </section>
        <section id="prawy">
            <h2>
                Nasze kategorie
            </h2>
            <ul class="lista">
                @foreach (var kategory in Model.Kategories) {
                    <li>@kategory.nazwa</li>
                }
            </ul>
            <img src="media/ksiazki.jpg" alt="uwolnij swoją książkę"/>
            <table>
                <tr>
                    <td>Ile?</td>
                    <td>Koszt</td>
                    <td>Promocja</td>
                </tr>
                <tr>
                        <td>1 - 40</td>
                        <td>1.20 PLN</td>
                        <td rowspan="2">Subskrybuj newslatter upust 0.30 PLN na ogłoszenie</td>
                </tr>
                <tr>
                        <td>41 i więcej</td>
                        <td>0.70 PLN</td>
                        
                </tr>
            </table>
        </section>
    </div>
        <footer>Portal ogłoszenia drobne opracował: XXXXXXXXX</footer>
</main>
</body>
</html>
